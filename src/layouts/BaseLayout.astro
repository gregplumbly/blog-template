---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import ProviderTheme from '@/components/ProviderTheme'
import ProviderAnimations from '@/components/ProviderAnimations'
import TwSizeIndicator from '@/components/TwSizeIndicator'
import EditBlog from '@/components/editBlog'
const { title, description, image, articleDate } = Astro.props
---

<html lang='en' class='scroll-smooth'>
	<head>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
		<ProviderTheme />
		<ProviderAnimations />
	</head>

	<body class='bg-white text-stone-950 dark:bg-[#0a0910] dark:text-white'>
		<div
			class='mb-4 flex gap-2 justify-between px-16 py-4 text-sm font-semibold tracking-wider leading-5 uppercase bg-slate-900 max-md:flex-wrap max-md:px-5'
		>
			<div class='flex gap-5 justify-between whitespace-nowrap text-neutral-100 max-md:flex-wrap'>
				<img
					loading='lazy'
					src='https://cdn.builder.io/api/v1/image/assets/TEMP/fc3006d4354eef3c5cede4b6799eb6bceea0407a47bfea08a7fff273ea2941be?'
					class='aspect-[6.25] w-[269px]'
				/>
				<div class='flex gap-5 justify-between max-md:flex-wrap'>
					<div
						class='justify-center items-center py-3 border-0 border-yellow-700 border-solid h-[45px] w-[45px]'
					>
						HOME
					</div>
					<div class='my-auto'>instructors</div>
					<div class='justify-center items-center py-3 w-11 h-11 border border-black border-solid'>
						GIFTS
					</div>
					<div class='justify-center py-3 border-b-2 border-yellow-700 border-solid'>BLOG</div>
					<div class='my-auto'>MEMBERSHIP</div>
				</div>
			</div>
			<div class='flex gap-2 text-white'>
				<div class='justify-center px-6 py-3 bg-yellow-700 max-md:px-5'>start learning</div>
			</div>
		</div>
		<main
			class='px-5 sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 antialiased md:max-w-6xl grid gap-12 overflow-hidden md:overflow-visible'
		>
			<Header />
			<slot />
		</main>
		<Footer />
		<TwSizeIndicator />
		<EditBlog />
		<style>
			body {
				margin-left: calc(100vw - 100%); /* prevent layout shift */
			}
		</style>
	</body>
</html>
